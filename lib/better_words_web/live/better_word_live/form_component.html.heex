<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="better_word-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :label %>
    <%= text_input f, :label %>
    <%= error_tag f, :label %>
  
    <%= label f, :user_id %>
    <%= text_input f, :user_id %>
    <%= error_tag f, :user_id %>
  
    <%= label f, :reason %>
    <%= text_input f, :reason %>
    <%= error_tag f, :reason %>
  
    <%= label f, :worst_word_id %>
    <%= text_input f, :worst_word_id %>
    <%= error_tag f, :worst_word_id %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
